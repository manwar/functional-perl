use strict; use warnings; use warnings FATAL => 'uninitialized';

require "meta/test.pl";

use Test::More;

require "./testmem.pl";
setlimit_mem_MB ($^V->{version}[1] < 15 ? 30 : 80);

is readin("t/perl/weaken-coderef 2 50000 |"),
  "3\n";

my $n= 30000;
my $res= "450015000\n";

is readin("t/perl/weaken-coderef $n 1 |"),
  $res;

SKIP: {
    skip "Perl issue", 1 unless $ENV{TEST_PERL};
    # XXX is this really a perl issue?

    is readin("t/perl/weaken-coderef-alternative-fix Y $n 1 |"),
      $res;
}

is readin("t/perl/weaken-coderef-alternative-fix rec $n 1 |"),
  $res;

is readin("t/perl/weaken-coderef-alternative-fix '' $n 1 |"),
  $res;

done_testing;
